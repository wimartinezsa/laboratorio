</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Preloader -->
  <div class="preloader flex-column justify-content-center align-items-center">
    <img class="animation__shake" src="/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
  </div>

  <!-- Navbar -->
  <%- include ('../parts/navbar.ejs')%>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
 
  <%- include ('../parts/menu.ejs')%>





  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <button type="button" class="btn btn-primary" onclick="gestionarEmpresa();">Nueva Empresa</button>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Inicio</a></li>
              <li class="breadcrumb-item active">Contratos</li>
              <li class="breadcrumb-item active">Empresas</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
   
    <div class="container-fluid">
        <table class="table table-striped" id="tabla_empresa" style="font-size: 12px;">
        <thead>
            <tr class="line-head">
             
                <th>Codigo</th>
                <th>Nit</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Municipio</th>
                <th>Departamento</th>
      
                <th>Admin.</th>
            </tr>
        </thead>
        <tbody >
        </tbody>
        </table>
    </div>

      


    </div>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->




  <div class="modal fade" id="Frm_empresa">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Registrar Empresas</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="number" id='id_empresa' readonly="true" hidden="true">
        
        
        
          <div class="row">
                  <div class="col-6">
                    <label for="message-text" class="col-form-label">Codigo:</label>
                    <input type="text" class="form-control" id='codigo'
                        style="border: 1px solid rgb(208, 205, 205)"
                        placeholder="Digite el codigo"  required>    
                </div>


                <div class="col-6">
                  <label for="message-text" class="col-form-label">Nit:</label>
                  <input type="text" class="form-control" id='nit'
                      style="border: 1px solid rgb(208, 205, 205)"
                      placeholder="Digite el Nit de la Empresa"  required>    
                </div>

               
   
          </div>


        
        <div class="row">
         
          <div class="col-6">
            <label for="message-text" class="col-form-label">Razon Social:</label>
            <input type="text" class="form-control" id="razon_social"
                style="border: 1px solid rgb(208, 205, 205)"
                placeholder="Digite nombre de la Empresa"  required>    
          </div>

          <div class="col-6">
            <label for="message-text" class="col-form-label">Sigla:</label>
            <input type="text" class="form-control" id='sigla'
                style="border: 1px solid rgb(208, 205, 205)"
                placeholder="Digite sigla de la empresa" > 
          </div>


        </div>





      <div class="row">
         

         

          <div class="col-6">
            <label for="message-text" class="col-form-label">Tipo de Empresa:</label>
            <select class="form-control" id='tipo' required >
                <option selected disabled>Seleccione una opci√≥n</option>
                <option value='Particular'>Particular</option>
                <option value='Empresa'>Empresa</option>
                <option value='Eps'>Eps</option>
                <option value='Esess'>Esess</option>
              
            </select>
        </div>

        <div class="col-6">
          <label for="message-text" class="col-form-label">Municipio:</label>
          <select class="form-control" id='municipio' required >
           
          </select>
        </div>


      </div>


      






        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" id="btn_registrar" class="btn btn-primary" onclick="registrarEmpresa()">Registrar</button>
          <button type="button" id="btn_actualizar" class="btn btn-primary" onclick="actualizarEmpresa()">Actualizar</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>



  <%- include ('../parts/footer.ejs')%>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

