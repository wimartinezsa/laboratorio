</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Preloader -->
  <div class="preloader flex-column justify-content-center align-items-center">
    <img class="animation__shake" src="/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
  </div>

  <!-- Navbar -->
  <%- include ('../parts/navbar.ejs')%>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
 
  <%- include ('../parts/menu.ejs')%>





  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <button type="button" class="btn btn-primary" onclick="gestionarContratos()">Nuevo Contrato</button>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Inicio</a></li>
              <li class="breadcrumb-item active">Contratos</li>
        
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
   
    <div class="container-fluid">
        <table class="table table-striped" id="tabla_contratos" style="font-size: 12px;">
        <thead>
            <tr class="line-head">
             
                <th>#</th>
                <th>Nombre</th>
                <th>Empresa</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Municipio</th>
                <th>Estado</th>
                <th>Admin.</th>
            </tr>
        </thead>
        <tbody >
        </tbody>
        </table>
    </div>

      


    </div>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->




  <div class="modal fade" id="Frm_contrato">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Registrar Contrato</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="number" id='id_contrato' readonly="true" hidden="true">
        
        
        
          <div class="row">
                  <div class="col-6">
                    <label for="message-text" class="col-form-label">Nombre:</label>
                    <input type="text" class="form-control" id='nombre_contrato'
                        style="border: 1px solid rgb(208, 205, 205)"
                        placeholder="Digite un nombre al cotrato"  required>    
                </div>

                <div class="col-6">
                  <label for="message-text" class="col-form-label">Empresa:</label>
                  <select class="form-control" id='empresas' required >
                  </select>
                </div>
               
   
        </div>


        
        <div class="row">
         
          <div class="col-6">
            <label for="message-text" class="col-form-label">Fecha Inicio:</label>
            <input type="date" class="form-control" id='fecha_inicio'
                style="border: 1px solid rgb(208, 205, 205)"
                placeholder="Digite nombre fecha de inicio"  required>    
          </div>

          <div class="col-6">
            <label for="message-text" class="col-form-label">Fecha Fin:</label>
            <input type="date" class="form-control" id='fecha_fin'
                style="border: 1px solid rgb(208, 205, 205)"
                placeholder="Digite la Fecha Fin" > 
          </div>
        </div>


        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" id="btn_registrar" class="btn btn-primary" onclick="registrarContrato()">Registrar</button>
          <button type="button" id="btn_actualizar" class="btn btn-primary" onclick="actualizarContrato()">Actualziar</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>


  <div class="modal fade" id="Frm_acuerdos">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"  id="Frm_acuerdos_title">Administrar Trarifa</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="number" id='id_acuerdo' readonly="true" hidden="true" >
          <input type="number" id='id_contrato2' readonly="true"  hidden="true">
        
          <div class="row">
            <div class="col-8">
              <div class="row ">
                <table class="table table-striped" id="tabla_acuerdos">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Servicio</th>
                      <th scope="col">Codigo</th>
                      <th scope="col">Procedimiento</th>
                      <th scope="col">Precio</th>
                      <th scope="col">Empresa</th>
                      <th scope="col">Estado</th>
                    </tr>
                  </thead>
                  <tbody >
                  </tbody>
                </table>
              </div>
                

            </div>
            <div class="col-4">
              <div class="row"> 
                <div class="col-12 text-center">
                  <button type="button" id="btn_todos_procedimientos" class="btn btn-primary" onclick="confirmaRegistrarTodosExamenes()">Registrar Todos Los Examenes</button>
                </div>
              </div>

              <div class="row">
                
               <div class="col-12">
                  <label for="message-text" class="col-form-label" >Procedimientos:</label>
                  <select id='procedimientos' class="form-control" required >
                  </select>
                </div>
            </div>

            
          <div class="row ">
            <div class="col-12">
              <label for="message-text" class="col-form-label">Valor Acordado:</label>
              <input type="number" class="form-control" id='precio'
                  style="border: 1px solid rgb(208, 205, 205)"
                  placeholder="Digite la tarifa acordada"  required>  
            </div>
          
          </div>
          <div class="row mt-2 justify-content-center">

              <button type="button" id="btn_registrar_acuerdo" class="btn btn-primary " onclick="agregarAcuerdo()">Agregar</button>
              <button type="button" id="btn_actualizar_acuerdo" class="btn btn-primary " onclick="actualizarAcuerdo()">Actualizar</button>
          
            </div>

            </div>
          </div>



       

          
           


        </div>
       
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>










  <%- include ('../parts/footer.ejs')%>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
