    <!-- Main content -->
   
    <div class="container-fluid"> 

          <table class="table table-striped" id="tabla_pacientes" style="font-size: 12px;">
              <thead>
                  <tr class="line-head">
                    <th>Identificación</th>
                      <th>tipo ident.</th>
                      <th>Nombres</th>
                      <th>email</th>
                      <th>Telefono</th>
