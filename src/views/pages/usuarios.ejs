<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Software Laboratorio Clinico</title>

  


  <%- include ('../parts/script_superior.ejs')%>

 <!-- DataTables -->
 <link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
 <link rel="stylesheet" href="/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
 <link rel="stylesheet" href="/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
 <!-- Theme style -->
 <link rel="stylesheet" href="/dist/css/adminlte.min.css">



</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Preloader -->
  <div class="preloader flex-column justify-content-center align-items-center">
    <img class="animation__shake" src="/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
  </div>

  <!-- Navbar -->
  <%- include ('../parts/navbar.ejs')%>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
 
  <%- include ('../parts/menu.ejs')%>





  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <button type="button" class="btn btn-primary" onclick="gestionarUsuario();">Nuevo Usuario</button>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Inicio</a></li>
              <li class="breadcrumb-item active">Usuario</li> 
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
   
    <div class="container-fluid">
        <table class="table table-striped" id="tabla_usuario" style="font-size: 12px;">
        <thead>
            <tr class="line-head">
                <th>Identificacion</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Area</th>
                <th>Cargo</th>
                <th>Rol</th>
                <th>Firma</th>
                <th>Estado</th>
                <th>Admin.</th>
            </tr>
        </thead>
        <tbody >
        </tbody>
        </table>
    </div>

      


    </div>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->




  <div class="modal fade" id="Frm_usuario">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Registrar Usuarios</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="number" id='id_usuario' readonly="true" hidden="true">
          <div class="row">


            
            <div class="col-6">
              <label for="message-text" class="col-form-label">Tipo de Identificación:</label>
              <select class="form-control" id='tipo_identificacion' required >
                  <option value='' selected disabled>Seleccione una opción</option>
                  <option value='Cedula_ciudadania'>Cédula ciudadanía</option>
                  <option value='Cedula_de_extranjeria'>Cédula de extranjería</option>
                  <option value='Carne_diplomatico'>Carné diplomático</option>
                  <option value='Pasaporte'>Pasaporte</option>
                  <option value='Salvoconducto'>Salvoconducto</option>
                  <option value='Permiso_Especial_de_Permanencia'>Permiso Especial de Permanencia</option>
                  <option value='Registro_civil'>Registro civil</option>
                  <option value='Tarjeta_de_identidad'>Tarjeta de identidad</option>
                  <option value='Certificado_de_nacido_vivo'>Certificado de nacido vivo</option>
                  <option value='Adulto_sin_identificar'>Adulto sin identificar</option>
                  <option value='Menor_sin_identificar'>Menor sin identificar</option>
                
              </select>
          </div>


                  <div class="col-6">
                    <label for="message-text" class="col-form-label">Identificacion:</label>
                    <input type="text" class="form-control" id='identificacion'
                        style="border: 1px solid rgb(208, 205, 205)"
                        placeholder="Digite la identificación"  required>    
                </div>

   
          </div>


        
        <div class="row">

          <div class="col-6">
            <label for="message-text" class="col-form-label">Nombres:</label>
            <input type="text" class="form-control" id='nombres'
                style="border: 1px solid rgb(208, 205, 205)"
                placeholder="Digite el nombre de usuario"  required>    
          </div>
         
          <div class="col-6">
            <label for="message-text" class="col-form-label">Email:</label>
            <input type="text" class="form-control" id="email"
                style="border: 1px solid rgb(208, 205, 205)"
                placeholder="Digite email del usuario"  required>    
          </div>

        </div>

      <div class="row">

        <div class="col-6">
          <label for="message-text" class="col-form-label">Cargo:</label>
          <input type="text" class="form-control" id='cargo'
              style="border: 1px solid rgb(208, 205, 205)"
              placeholder="Digite el cargo" > 
        </div>
         
          <div class="col-6">
            <label for="message-text" class="col-form-label">Rol del Sistema:</label>
            <select class="form-control" id='rol' required >
                <option selected disabled>Seleccione un Rol</option>
                <option value='Administrador'>Administrador</option>
                <option value='Facturacion'>Facturación</option>
                <option value='Bacteriologo'>Bacteriologo</option>
                <option value='Auxiliar'>Auxiliar</option>      
            </select>
        </div>
       

      </div>


      <div class="row">
          <div class="col-6">
              <label for="message-text" class="col-form-label">Areas:</label>
              <select class="form-control" id='areas' required >
                        
              </select>
          </div>
      </div>
    




        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" id="btn_registrar" class="btn btn-primary" onclick="registrarUsuario()">Registrar</button>
          <button type="button" id="btn_actualizar" class="btn btn-primary" onclick="actualizarUsuario()">Actualziar</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>





  <div class="modal fade" id="Frm_firma">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Registrar Firma</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="number" id='id_usuario_firma' hidden="true" readonly="true">
          <div class="row">
                  <div class="col-12">
                    <label for="message-text" class="col-form-label">Cargar Firma:</label>
                    <input type="file" class="form-control" id='foto'
                        style="border: 1px solid rgb(208, 205, 205)">     
                </div>
          </div>
        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" id="btn_registrar" class="btn btn-primary" onclick="registrarFirma()">Registrar</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>



  <%- include ('../parts/footer.ejs')%>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

