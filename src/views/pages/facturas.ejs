 <div class="modal fade" id="Frm_factura">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Generar Factura</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
       
      
      <div class="container"> 

        <div class="row">
                    <div class="col-6">
                       <label for="message-text" class="col-form-label">Num. Factura:</label>
                      <input type="text" class="form-control" id='id_factura'
                          style="border: 1px solid rgb(208, 205, 205)" readonly disabled>
                  </div> 
                  <div class="col-6">
                       <label for="message-text" class="col-form-label">Num. Autorizacion:</label>
                      <input type="text" class="form-control" id='autorizacion'
                          style="border: 1px solid rgb(208, 205, 205)" disabled>
                  </div> 



        </div> 
        <div class="row">
                    <div class="col-6">
                      <label for="message-text" class="col-form-label">Identificación:</label>
                      <input type="text" class="form-control" id='identificacion'
                          style="border: 1px solid rgb(208, 205, 205)"
                          placeholder="Digite la identificación"  readonly disabled>    
                  </div>

                    

                  <div class="col-6">
                    <label for="message-text" class="col-form-label">Nombres:</label>
                    <input type="text" class="form-control" id='nombres'
                        style="border: 1px solid rgb(208, 205, 205)"
                        placeholder="Digite nombres y apellidos"  readonly disabled>    
                  </div>
            </div>
<hr>
            <div class="row">

            <div class="col-8">
           
              <table class="table table-striped"  style="font-size: 12px;">
                  <thead>
                      <tr class="line-head">
                          <th>ID.</th>
                          <th>Procedimiento</th>
                          <th>Cantidad</th>
                          <th>Precio</th>
                          <th>Contrato</th>
                          <th>Estado</th>
                          <th>Acciones</th>
                      </tr>
                  </thead>
                  <tbody id="tabla_examenes_factura">
                  </tbody>
                  </table>
            </div>
            <div class="col-4">
               <div class="d-flex justify-content-center mt-2">
                   <h4>Agregrar examen a la factura</h4>
              </div>
                      <select id="procedimiento_acordados" class="form-control select2bs4" style="width: 100%;" onchange="obtenerPrecio()"></select>
                      <input type="text" class="form-control" id='precio' style="border: 1px solid rgb(208, 205, 205)"  placeholder="Precio del procedimiento"  > 
                  <div class="d-flex justify-content-center mt-2">
                        <button type="button" id="btn_agragar_Procediemiento_Factura" class="btn btn-primary" onclick="agregarExamenFactura()">Agregar</button>
                  </div>
     

            </div>


                 
            </div>
          <hr>

      </div>



        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" id="btn_emitir_factura" class="btn btn-primary" onclick="emitirFactura()">Emitir Factura</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>




<div class="modal fade" id="Frm_estado_examen">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Estado de la Muestra</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="number" id='id_prestacion' readonly="true" hidden="true">
      
          <div class="row">
            <div class="col-12">
              <label for="message-text" class="col-form-label">Fecha de Muestra:</label>
              <input type="datetime-local" id="fecha_muestra" class="form-control"/>
          </div>  
    </div>
          <div class="row">
              <div class="col-12">
                <label for="message-text" class="col-form-label">Observación:</label>
                <textarea  name="w3review" rows="4" id="observacion" cols="35" placeholder="Digitar una Observación"></textarea>
            </div>  
        </div>

        <div class="row">
          <div class="col-12">
            <label for="message-text" class="col-form-label">Estado de la Muestra:</label>
            <select class="form-control" id="estado_muestra">
              <option value="" disabled="true" selected="true">Seleccione un estado</option>
              <option value="Solicitado">Solicitado</option>
              <option value="En_Toma_de_Muestra">En Toma de Muestra</option>
              <option value="En_Proceso_de_Analisis">En Proceso de Analisis</option>
            </select>
        </div>  
    </div>



        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" id="btn_registrar" class="btn btn-primary" onclick="cambiarEstadoExamen()">Registrar</button>

        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
