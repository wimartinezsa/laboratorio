  <%- include ('../parts/menu.ejs')%>





  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <button type="button" class="btn btn-primary" onclick="gestionarServicio();">Nuevo Servicio</button>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Inicio</a></li>
              <li class="breadcrumb-item active">Servicios</li>
              <li class="breadcrumb-item active">Servicio</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
   
    <div class="container-fluid">

        <table class="table table-striped" id="tabla_empresa" style="font-size: 12px;">
        <thead>
            <tr class="line-head">
             
                <th>#</th>
                <th>Prestador</th>
                <th>Servicio</th>
                <th>Tipo de Servicio</th>
                <th>Grupo Servicio</th>
                <th>Modalidad</th>
                <th>Estado</th>
                <th>Admin.</th>
            </tr>
        </thead>
        <tbody >
        </tbody>
        </table>
    </div>

      


    </div>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->




  <div class="modal fade" id="Frm_servicio">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Registrar Servicios</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="number" id='id_servicio' readonly="true" hidden="true">
        
        
        
          <div class="row">
                  <div class="col-6">
                    <label for="message-text" class="col-form-label">Nombre:</label>
                    <input type="text" class="form-control" id='nombre_servicio'
                        style="border: 1px solid rgb(208, 205, 205)"
                        placeholder="Digite el nombre del Servicio"  required>    
                </div>

                <div class="col-6">
                  <label for="message-text" class="col-form-label">Tipo de Servicio:</label>
                  <select class="form-control" id='tipo_servicio' required >
                  </select>
                </div>
        </div>


        
        <div class="row">
         
          <div class="col-6">
            <label for="message-text" class="col-form-label">Grupo:</label>
            <select class="form-control" id='grupo' required >
              <option selected="true" disabled="true">Seleccione una opción</option>
              <option value="Consulta_externa">Consulta externa</option>
              <option value="Apoyo_diagnostico_y_complementacion_terapeutica">Apoyo diagnostico y complementacion terapeutica</option>
              <option value="Internacion">Internacion</option>
              <option value="Quirurgico">Quirurgico</option>
              <option value="Atencion_inmediata">Atencion inmediata</option>
            </select> 
          </div>


          <div class="col-6">
            <label for="message-text" class="col-form-label">Madalidad:</label>
            <select class="form-control" id='modalidad' required >
              <option selected="true" disabled="true">Seleccione una opción</option>
              <option value="Intramural">Intramural</option>
              <option value="Extramural_unidad_movil">Extramural unidad movil</option>
              <option value="Extramural_domiciliaria">Extramural domiciliaria</option>
              <option value="Extramural_jornada_de_salud">Extramural jornada de salud</option>
              <option value="Telemedicina_interactiva">Telemedicina interactiva</option>
              <option value="Telemedicina_no_interactiva">Telemedicina no interactiva</option>
              <option value="Telemedicina_telexperticia">Telemedicina telexperticia</option>
              <option value="Telemedicina_telemonitoreo">Telemedicina telemonitoreo</option>
            </select>
          </div>

        </div>

     
        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" id="btn_registrar" class="btn btn-primary" onclick="registrarServcio()">Registrar</button>
          <button type="button" id="btn_actualizar" class="btn btn-primary" onclick="actualizarServicio()">Actualizar</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>




  

  <div class="modal fade" id="Frm_procedimientos">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="titulo_frm_examen"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
         
  
        <div class="row">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Servicio</th>
                <th scope="col">codigo</th>
                <th scope="col">Procedimiento</th>
                <th scope="col">Admin.</th>
              </tr>
            </thead>
            <tbody id="tabla_procedimientos">
          
            </tbody>
          </table>
        </div>


        </div>

      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>









